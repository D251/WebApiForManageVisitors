@model WebApiForWorkPermitSystem.Models.DesignationMasterModel

@{
    ViewBag.Title = "Create";
}
<style>
    .ForError {
        /*font-weight: bold;*/
        color: red;
    }
</style>
@using (Html.BeginForm("Create", "EmployeeDesignation", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Designation Master
            <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink("  Back to List", "Index")</small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                SUBMIT
            </button>
        </div>
    </div>

    <div class="content-header clearfix">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <style>
                .MakeWide {
                    width: 350px;
                    height: 30px;
                }
            </style>
            
            <div class="form-group">
                @Html.Label("Department", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.DropDownList("DepartmentCombo", (ViewBag.DepartmentCombo) as SelectList, "--Select Department--", new { @class = "MakeWide" })*@
                    @Html.DropDownListFor(model=>model.DepartmentCombo, (ViewBag.DepartmentCombo) as SelectList, "--Select Department--", new { @class = "MakeWide" })
                    @Html.ValidationMessageFor(model => model.DepartmentCombo, "", new { @class = "ForError" })
                </div>
            </div>
              
                     <div class="form-group">
                         @Html.LabelFor(model => model.DesignationName, htmlAttributes: new { @class = "control-label col-md-2" })
                         <div class="col-md-10">
                             @Html.EditorFor(model => model.DesignationName, new { htmlAttributes = new { @class = "MakeWide", style = "width: 38%" } })
                             @Html.ValidationMessageFor(model => model.DesignationName, "", new { @class = "ForError" })
                         </div>
                     </div>
               
            
              @if (ViewBag.Errormessage == "Fail")
            {
                <div class="alert alert-danger fade in" style="width:400px " height:2px">
                    <a href="#" class="close" data-dismiss="alert">&times;</a>
                    <strong>Error!  </strong>  Designation Name Already Present !!!.
                </div>
            }
        </div>
    </div>
}
