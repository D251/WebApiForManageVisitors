@model WebApiForManageVisitors.Models.DesignationMasterModel

@{
    ViewBag.Title = "Edit";
}
<style>
    .ForError {
        /*font-weight: bold;*/
        color: red;
    }
</style>
<style>
    .MakeWide {
        width: 435px;
        height: 30px;
    }
</style>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Edit Designation Master
            <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink("  Back to List", "Index")</small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                SUBMIT
            </button>
        </div>
    </div>
    <div class="content-header clearfix">
        <div class="box box-info">
            <div class="box-body">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                  
                    <div class="form-group">
                        @Html.LabelFor(model => model.DepartmentCombo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.DropDownListFor(model => model.DepartmentCombo, (ViewBag.DepartmentCombo1) as SelectList, "--Select Department--", new { id = "DepartmentDropDown", @class = "MakeWide" })
                            @Html.ValidationMessageFor(model => model.DepartmentCombo, "", new { @class = "ForError" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DesignationName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.DesignationName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DesignationName, "", new { @class = "ForError" })
                        </div>
                    </div>

                  
                </div>
            </div>
        </div>
    </div>
}

